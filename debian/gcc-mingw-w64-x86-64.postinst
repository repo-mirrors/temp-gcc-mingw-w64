#! /bin/sh
# postinst script for gcc-mingw-w64-x86-64
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in
    configure)

        update-alternatives --install /usr/bin/x86_64-w64-mingw32-gcc x86_64-w64-mingw32-gcc /usr/bin/x86_64-w64-mingw32-gcc-posix 30 \
	  --slave /usr/bin/x86_64-w64-mingw32-cpp x86_64-w64-mingw32-cpp /usr/bin/x86_64-w64-mingw32-cpp-posix \
	  --slave /usr/bin/x86_64-w64-mingw32-gcc-6 x86_64-w64-mingw32-gcc-6 /usr/bin/x86_64-w64-mingw32-gcc-6-posix \
	  --slave /usr/bin/x86_64-w64-mingw32-gcc-ar x86_64-w64-mingw32-gcc-ar /usr/bin/x86_64-w64-mingw32-gcc-ar-posix \
	  --slave /usr/bin/x86_64-w64-mingw32-gcc-nm x86_64-w64-mingw32-gcc-nm /usr/bin/x86_64-w64-mingw32-gcc-nm-posix \
	  --slave /usr/bin/x86_64-w64-mingw32-gcc-ranlib x86_64-w64-mingw32-gcc-ranlib /usr/bin/x86_64-w64-mingw32-gcc-ranlib-posix \
	  --slave /usr/bin/x86_64-w64-mingw32-gcov x86_64-w64-mingw32-gcov /usr/bin/x86_64-w64-mingw32-gcov-posix
        update-alternatives --install /usr/bin/x86_64-w64-mingw32-gcc x86_64-w64-mingw32-gcc /usr/bin/x86_64-w64-mingw32-gcc-win32 60 \
	  --slave /usr/bin/x86_64-w64-mingw32-cpp x86_64-w64-mingw32-cpp /usr/bin/x86_64-w64-mingw32-cpp-win32 \
	  --slave /usr/bin/x86_64-w64-mingw32-gcc-6 x86_64-w64-mingw32-gcc-6 /usr/bin/x86_64-w64-mingw32-gcc-6-win32 \
	  --slave /usr/bin/x86_64-w64-mingw32-gcc-ar x86_64-w64-mingw32-gcc-ar /usr/bin/x86_64-w64-mingw32-gcc-ar-win32 \
	  --slave /usr/bin/x86_64-w64-mingw32-gcc-nm x86_64-w64-mingw32-gcc-nm /usr/bin/x86_64-w64-mingw32-gcc-nm-win32 \
	  --slave /usr/bin/x86_64-w64-mingw32-gcc-ranlib x86_64-w64-mingw32-gcc-ranlib /usr/bin/x86_64-w64-mingw32-gcc-ranlib-win32 \
	  --slave /usr/bin/x86_64-w64-mingw32-gcov x86_64-w64-mingw32-gcov /usr/bin/x86_64-w64-mingw32-gcov-win32

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
